<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout_editor_absoluteX="173dp"
    tools:layout_editor_absoluteY="192dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/colorLightViolet">

            <ImageView
                android:id="@+id/imageViewIconTrailer"
                android:background="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iconplay"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="8dp"
                android:contentDescription="@string/description_icon_videoplayer"/>

            <TextView
                android:id="@+id/textViewTrailersTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/TextStyle"
                app:layout_constraintStart_toEndOf="@+id/imageViewIconTrailer"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="8dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>